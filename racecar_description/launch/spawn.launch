<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="custom_world" default="cone_course"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find racecar_description)/worlds/$(arg custom_world).world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="cat '$(find racecar_description)/urdf/ackermann.xacro' "/>

  <arg name="init_x" default="0" />
  <arg name="init_y" default="0" />
  <arg name="init_z" default="0.5" />

  <node name="racecar_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model racecar -x $(arg init_x) -y $(arg init_y) -z $(arg init_z)" />

  <rosparam file="$(find racecar_description)/config/config.yaml" command="load" />

  <node name="controller_spawner" pkg="controller_manager" type="spawner" ns="/racecar" args="left_rear_wheel_joint_controller right_rear_wheel_joint_controller left_steer_block_controller right_steer_block_controller joint_state_controller --shutdown-timeout 3" />

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen" >
    <remap from="/joint_states" to="/racecar/joint_states" />
  </node>

</launch>

